<!-- Parameter File for 3D Vision Project 'Using Lines for Pose Estimation' -->

<!-- <?xml version="1.0"?> -->

<PointIn3D>
	<noiseModel>
		<!-- Anisotropic Gaussian Noise for 3D Point Coordinates -->
		<!-- X, Y, Z refer to the camera frame -->

		<!-- Means -->
		<anisotropicGaussian muX = "0" />
		<anisotropicGaussian muY = "0" />
		<anisotropicGaussian muZ = "0" />

		<!-- Variances -->
		<anisotropicGaussian sigmaX = "0.01"/>
		<anisotropicGaussian sigmaY = "0.01"/>
		<anisotropicGaussian sigmaz = "0.01"/>
	</noiseModel>
</PointIn3D>